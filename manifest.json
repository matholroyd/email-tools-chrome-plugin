{
  "manifest_version": 2,

  "name": "Email Tools",
  "description": "Tools to help e.g. increase privacy and reduce SPAM.",
  "version": "1.0",

  "permissions": [
    "http://*/",
    "https://*/",
    "contextMenus"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  }
}